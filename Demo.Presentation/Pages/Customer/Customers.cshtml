@page
@model CustomersModel
@{
    ViewData["Title"] = "Customers";
}

<!-- Main Content -->
<div class="container">
    <h1 style="font-weight: bolder; text-align: center;">Customers</h1>
    <div class="d-flex justify-content-end">
            <a class="btn btn-primary"  style="text-decoration: none;" asp-area="" asp-page="/Customer/Create">Create Customer</a>
      
    </div>
    <table>
        <thead>
            <tr>
                <th style="width: 2%;">ID</th>
                <th  style="width: 30%;">Name</th>
                <th  style="width: 10%;">Birth Date</th>
                <th  style="width: 10%;">Age</th>
                <th style="width: 10%;" colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr class="@(customer.IsActive ? "" : "in-active")">
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.BirthDate.ToString("dd/MM/yyyy")</td>
                    <td>@customer.Age</td>
                    <td colspan="2">

                       
                            <a class="btn btn-primary"  asp-area="" asp-page="/Customer/Edit" asp-route-id="@customer.Id">
                            <i class="bi bi-pencil"></i>
                            </a>

                            <a class="btn btn-danger" asp-area="" asp-page="/Customer/Delete" asp-route-id="@customer.Id">
                                <i class="bi bi-trash"></i>
                            </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>