@page
@model Demo.Presentation.Pages.Customer.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}


<div class="container mt-5">
    <h2>Add New Customer</h2>
    <form method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Customer.Name">Name</label>
            <input type="text" class="form-control" readonly asp-for="Customer.Name">
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Customer.BirthDate">Birth Date</label>
            <input type="date" class="form-control" readonly asp-for="Customer.BirthDate">
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Customer.IsActive" readonly disabled>
            <label class="form-check-label" asp-for="Customer.IsActive">
                Is Active
            </label>
        </div>
        <input hidden class="form-check-input" type="text" asp-for="Customer.Id" readonly>
        <button type="submit" class="btn btn-danger mt-3">Delete Customer</button>
    </form>
</div>
